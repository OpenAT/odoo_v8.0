header .navbar-brand {
    height: 90px;
    margin-top: -25px;
    background-color: transparent;
}
header a.navbar-brand.logo {
    padding: 25px;
}

header a:hover.navbar-brand.logo {
    background-color: transparent;
}

header a.navbar-brand img {
    max-height: 90px;
    padding-top: 9px;
    padding-right: 20px;
}

@media (max-width: 768px) {
    header .navbar-brand {
        height: 60px;
        margin-top: -5px;
        background-color: white;
    }

    header a.navbar-brand img {
        max-height: 60px;
        padding-top: 1px;
        padding-right: 20px;
    }
}

header .navbar .navbar-toggle .icon-bar {
    background-color: #B4E0F3;
}
header .navbar .navbar-toggle:hover .icon-bar {
    background-color: #FCDE74;
}

.mb32.mt16 > blockquote {
    font-size: 14px;
} 
