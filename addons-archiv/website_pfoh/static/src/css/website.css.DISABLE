/* ---- CONTENT ---- */
h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
    color: #ffd558;
}

main a {
/* main a:link {*/
    color: #008EB2;
}
main a:hover {
    color: #B09C62;
}


.btn-pfotenhilfe:hover, .btn-pfotenhilfe:focus, .btn-pfotenhilfe:active, .btn-pfotenhilfe.active, .open .dropdown-toggle.btn-pfotenhilfe {
    color: green;
    background-color: red;
    border-color: black;
}


/* ---- SNIPPETS --- */
/* Background */
.pfoh_yellow {
    background: #FCDE74;
    color: white;
}
.pfoh_blue {
    background: #B1DCF2;
    color: black;
}
.pfoh_grey {
    background: #B79F7E;
    color: black;
}
.pfoh_grey_transparent {
    background-color: #B7A181;/*alte browser */
    background-color: rgba(231, 152, 44, 0.41);
    color: black;
}
.pfoh_red_box  {
    background-color: darkred;
    color: white;
}
.pfoh_red_box h1, .pfoh_red h2, .pfoh_red h3, .pfoh_red h4, .pfoh_red h5, .pfoh_red h6  {
    color: yellow;
}

.pfoh_yellow_box  {
    background-color: yellow;
    color: black;
}
.pfoh_yellow_box h1, .pfoh_yellow_box h2, .pfoh_yellow_box h3, .pfoh_yellow_box h4, .pfoh_yellow_box h5, .pfoh_yellow_box h6 {
    color: darkred;
}
.box_kleiner {
    width: 50%;
}
/* -- Footer -- */
footer {
    background: rgba(101, 91, 81, 1);
    color: rgba(252, 221, 115, 0.52);
}
footer a {
    color: rgba(255, 255, 255, 0.54) 
}

footer a:link {
    color: rgba(232, 142, 12, 0.61); 
}
footer a:hover {
    color: #008EB2;
}
footer a:visited {
    color: rgba(36, 34, 31, 0.52);
}
