<?xml version="1.0" encoding="utf-8"?>
<!-- More Info: https://doc.odoo.com/trunk/server/form-view-guidelines/ -->
<openerp>
    <data>
        <!-- openat_produktpass.lagerundtransport form, tree und search View -->
        <record model="ir.ui.view" id="openat_produktpass_lagerundtransport_form">
            <field name="name">openat_produktpass.lagerundtransport_form</field>
            <field name="model">openat_produktpass.lagerundtransport</field>
            <field name="arch" type="xml">
                <form string="Storage / Transport Instructions" version="7.0">
                    <group>
                        <field name="name"/>
                        <field name="openat_temperatur"/>
                        <field name="openat_luftfeuchte"/>
                        <field name="openat_licht"/>
                        <field name="openat_lageranweisung"/>
                        <field name="openat_lieferanweisung"/>
                        <field name="openat_produktpass_ids" widget="many2many_tags"/>
                    </group>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="openat_produktpass_lagerundtransport_tree">
            <field name="name">openat_produktpass.lagerundtransport_tree</field>
            <field name="model">openat_produktpass.lagerundtransport</field>
            <field name="arch" type="xml">
                <tree string="Storage / Transport Instructions" version="7.0">
                    <field name="name"/>
                    <field name="openat_temperatur"/>
                    <field name="openat_luftfeuchte"/>
                    <field name="openat_lageranweisung"/>
                    <field name="openat_lieferanweisung"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="openat_produktpass_lagerundtransport_search">
            <field name="name">openat_produktpass.lagerundtransport_search</field>
            <field name="model">openat_produktpass.lagerundtransport</field>
            <field name="arch" type="xml">
                <search string="Storage / Transport Instructions" version="7.0">
                    <field name="name"/>
                    <field name="openat_temperatur"/>
                    <field name="openat_luftfeuchte"/>
                    <field name="openat_licht"/>
                    <field name="openat_lageranweisung"/>
                    <field name="openat_lieferanweisung"/>
                </search>
            </field>
        </record>
        <!-- now we create the action + use the below created ir.actions.act_window.view to open the correct form view -->
        <record model="ir.actions.act_window" id="openat_produktpass_lagerundtransport_action">
            <field name="name">Storage / Transport Instructions</field>
            <field name="res_model">openat_produktpass.lagerundtransport</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="openat_produktpass_lagerundtransport_tree"/>
            <field name="search_view_id" ref="openat_produktpass_lagerundtransport_search"/>
        </record>
    </data>
</openerp>
